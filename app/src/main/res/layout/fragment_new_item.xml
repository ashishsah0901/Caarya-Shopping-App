<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <TextView
        android:id="@+id/productNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Name"
        android:textColor="#A1A1A1"
        android:textSize="16sp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/productNameET"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/productNameET"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/productNameLabel">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_border"
            android:textColor="#A1A1A1"
            android:inputType="text"
            android:hint="Product Name"
            android:paddingBottom="20dp"
            android:layout_gravity="center"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/marketPriceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Market Price"
        android:textColor="#A1A1A1"
        android:textSize="16sp"
        android:paddingTop="10dp"
        android:paddingBottom="7dp"
        app:layout_constraintStart_toStartOf="@id/marketPriceET"
        app:layout_constraintTop_toBottomOf="@id/productNameET"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/marketPriceET"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintEnd_toStartOf="@id/halfGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/marketPriceLabel">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#A1A1A1"
            android:hint="Price"
            android:textColorHint="#A1A1A1"
            android:inputType="numberDecimal"
            android:paddingBottom="20dp"
            android:background="@drawable/edit_text_border"
            android:layout_gravity="center"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/storePriceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Market Price"
        android:textColor="#A1A1A1"
        android:textSize="16sp"
        android:paddingTop="10dp"
        android:paddingBottom="7dp"
        app:layout_constraintStart_toStartOf="@id/storePriceET"
        app:layout_constraintTop_toBottomOf="@id/productNameET"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/storePriceET"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/halfGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/storePriceLabel">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#A1A1A1"
            android:hint="Price"
            android:textColorHint="#A1A1A1"
            android:inputType="numberDecimal"
            android:paddingBottom="20dp"
            android:background="@drawable/edit_text_border"
            android:layout_gravity="center"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/categoryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textColor="#A1A1A1"
        android:textSize="16sp"
        android:paddingTop="1dp"
        android:paddingBottom="7dp"
        app:layout_constraintTop_toBottomOf="@id/marketPriceET"
        app:layout_constraintStart_toStartOf="@+id/productNameET"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/categoryET"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categoryLabel">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_border"
            android:textColor="#A1A1A1"
            android:inputType="text"
            android:textColorHint="#A1A1A1"
            android:hint="fashion, footwear, home and fashion, other"
            android:paddingBottom="20dp"
            android:layout_gravity="center"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/descriptionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="#A1A1A1"
        android:textSize="16sp"
        android:paddingTop="1dp"
        android:paddingBottom="7dp"
        app:layout_constraintTop_toBottomOf="@id/categoryET"
        app:layout_constraintStart_toStartOf="@+id/productNameET"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/descriptionET"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descriptionLabel">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/edit_text_border"
            android:textColor="#A1A1A1"
            android:inputType="text"
            android:textColorHint="#A1A1A1"
            android:hint="Description"
            android:paddingBottom="20dp"
            android:layout_gravity="center"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/uploadPictureLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Image"
        android:textColor="#A1A1A1"
        android:textSize="16sp"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/descriptionET"
        app:layout_constraintStart_toStartOf="@+id/descriptionET"/>

    <ImageView
        android:id="@+id/uploadPictureIV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="20dp"
        android:src="@drawable/ic_outline_camera_enhance_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/uploadPictureLabel"
        app:layout_constraintBottom_toTopOf="@+id/cancelBT"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancelBT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:backgroundTint="@color/white"
        android:text="CANCEL"
        android:textColor="@color/white"
        android:background="@drawable/button_drawable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/halfGuideline"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/submitBT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:backgroundTint="@color/colorPrimaryVariant"
        android:text="SUBMIT"
        android:textColor="@color/white"
        android:background="@drawable/button_drawable2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/halfGuideline"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/halfGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>